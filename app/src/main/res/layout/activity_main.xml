<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background"
    tools:context=".view.MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/toolbarContainer"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/color_green"
            app:elevation="0dp"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:title="Sultan Lunch"
                app:titleTextAppearance="@style/TextAppearance.AppCompat.MediumToolbarTitle"
                app:titleTextColor="@color/white" />

        </com.google.android.material.appbar.AppBarLayout>

        <TextView
            android:id="@+id/txtDateTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_green_transparent"
            android:fontFamily="@font/montserrat_regular"
            android:paddingVertical="2dp"
            android:text="12/12/12"
            android:textAlignment="center"
            android:textSize="10sp"
            app:layout_constraintTop_toBottomOf="@id/toolbarContainer" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/imageView"
            android:layout_width="52dp"
            android:layout_height="50dp"
            android:layout_margin="16dp"
            app:actualImageResource="@drawable/autocraft"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtDateTime"
            app:roundAsCircle="true"
            android:scaleType="fitXY"
            app:roundingBorderColor="@color/color_green"
            app:roundingBorderWidth="2dp" />

        <TextView
            android:id="@+id/txtWish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/philosopher_bold"
            android:text="Hello"
            android:textColor="@color/color_black_light"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/txtName"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="@+id/imageView" />

        <TextView
            android:id="@+id/txtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/philosopher_bold"
            android:text="Autocraft Japan Ltd."
            android:textColor="@color/color_black_light"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/txtWish"
            app:layout_constraintTop_toBottomOf="@+id/txtWish" />

        <FrameLayout
            android:id="@+id/fragmentContainer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingHorizontal="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <ImageView
            android:id="@+id/imgWeather"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_margin="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtDateTime"
            app:srcCompat="@drawable/cloudy" />

        <TextView
            android:id="@+id/txtTemperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/philosopher_bold"
            android:text=""
            android:textColor="@color/color_green_dark"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/imgWeather"
            app:layout_constraintEnd_toStartOf="@+id/imgWeather"
            app:layout_constraintStart_toStartOf="@+id/imgWeather" />

        <TextView
            android:id="@+id/txtAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:text="UENO OFFICE, JAPAN"
            android:textAllCaps="true"
            android:textSize="8sp"
            app:layout_constraintEnd_toEndOf="@+id/imgWeather"
            app:layout_constraintStart_toStartOf="@+id/txtTemperature"
            app:layout_constraintTop_toBottomOf="@+id/imgWeather" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/groupWeather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            app:constraint_referenced_ids="imgWeather,txtTemperature,txtAddress" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/groupHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            app:constraint_referenced_ids="groupWeather,txtWish,txtName,txtDateTime,imageView" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/bottomAppBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:backgroundTint="@color/color_green"
        app:contentInsetStart="0dp"
        app:elevation="4dp"
        app:fabAlignmentMode="end"
        app:popupTheme="@style/Theme.AppCompat.Light">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:weightSum="4">

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".7" />

            <ImageView
                android:id="@+id/imgHome"
                android:layout_width="36dp"
                android:layout_height="match_parent"
                android:layout_marginVertical="10dp"
                android:layout_marginRight="32dp"
                android:layout_weight="1"
                android:background="@drawable/green_ripple"
                android:clickable="true"
                android:padding="6dp"
                android:src="@drawable/outline_food" />

            <ImageView
                android:id="@+id/imgPersonal"
                android:layout_width="36dp"
                android:layout_height="match_parent"
                android:layout_marginVertical="10dp"
                android:layout_marginRight="32dp"
                android:layout_weight="1"
                android:background="@drawable/green_ripple"
                android:clickable="true"
                android:padding="6dp"
                android:src="@drawable/ic_person" />

        </LinearLayout>

    </com.google.android.material.bottomappbar.BottomAppBar>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/color_green"
        android:outlineSpotShadowColor="@android:color/transparent"
        app:layout_anchor="@id/bottomAppBar"
        app:srcCompat="@drawable/ic_add"
        app:tint="@color/color_white" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>