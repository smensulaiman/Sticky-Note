<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.StickyNote" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand colorModel. -->
        <item name="colorPrimary">@color/color_green</item>
        <item name="colorPrimaryVariant">@color/color_green_dark</item>
        <item name="colorOnPrimary">@color/color_white</item>
        <!-- Secondary brand colorModel. -->
        <item name="colorSecondary">@color/color_blue_light</item>
        <item name="colorSecondaryVariant">@color/color_purple_light</item>
        <item name="colorOnSecondary">@color/color_black</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:statusBarColor">@color/color_green</item>
    </style>

    <style name="StickyNote.Splash" parent="Theme.StickyNote">
        <item name="android:windowBackground">@color/color_green</item>
    </style>

    <style name="TextAppearance.AppCompat.MediumToolbarTitle" parent="Base.TextAppearance.AppCompat.Medium">
        <item name="fontFamily">@font/philosopher_bold</item>
    </style>

    <style name="Widget.MaterialComponents.CustomTabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="ContentImageBadgeTitle" parent="Theme.StickyNote">
        <item name="android:alpha">0.5</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="ContentImageBadgeText" parent="Theme.StickyNote">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="ContentMainBadgeTitle" parent="Theme.StickyNote">
        <item name="android:textColor">@color/contentBadgeTitle</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="TitleBadgeText" parent="Theme.StickyNote">
        <item name="android:textColor">@color/titleBadgeText</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="TitleBadgeTitle" parent="Theme.StickyNote">
        <item name="android:textColor">@color/titleBadgeTitle</item>
        <item name="android:textSize">12dp</item>
    </style>

</resources>